@model Test.Models.User

@{
    ViewBag.Title = "Edit User";
}

<!-- Heading Section -->
<h2 class="text-center mb-4">Edit User</h2>

<!-- Form Section -->
<form method="post">
    <div class="row">
        <!-- Name Field -->
        <div class="col-md-6 mb-3">
            <label for="Name" class="form-label">Name</label>
            <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
        </div>

        <!-- Age Field -->
        <div class="col-md-6 mb-3">
            <label for="Age" class="form-label">Age</label>
            <input type="number" id="Age" name="Age" class="form-control" value="@Model.Age" required />
        </div>
    </div>

    <div class="row">
        <!-- Phone Number Field -->
        <div class="col-md-6 mb-3">
            <label for="PhoneNumber" class="form-label">Phone Number</label>
            <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" required />
        </div>

        <!-- Date of Birth Field -->
        <div class="col-md-6 mb-3">
            <label for="DateOfBirth" class="form-label">Date of Birth</label>
            <input type="date" id="DateOfBirth" name="DateOfBirth" class="form-control" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" required />
        </div>
    </div>


    <div class="row">
        <!-- Date and Time -->
        <div class="col-md-6 mb-3">
            <label for="DateTime" class="form-label">Date and Time:</label>
            <input type="datetime-local" class="form-control" id="DateTime" name="DateTime" value="@Model?.Time.ToString("yyyy-MM-ddTHH:mm")" required>
        </div>
        <!-- Qualification Field -->
        <div class="col-md-6 mb-3">
            <label for="Qualification" class="form-label">Qualification</label>
            <input type="text" id="Qualification" name="Qualification" class="form-control" value="@Model.Qualification" required />
        </div>
    </div>

    <div class="row">
        <!-- Emirates Field -->
        <div class="col-md-6 mb-3">
            <label for="Emirates" class="form-label">Emirates</label>
            <input type="text" id="Emirates" name="Emirates" class="form-control" value="@Model.Emirates" required />
        </div>

        <!-- Is Available Switch -->
        <div class="col-md-6 mb-3">
            <label for="IsAvailable" class="form-label">Is Available</label>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="IsAvailable" name="IsAvailable" @(Model.IsAvailable ? "checked" : "") />
            </div>
        </div>
    </div>

    <!-- Save Changes Button -->
    <div class="text-center">
        <button type="submit" class="btn btn-lg btn-primary">Save Changes</button>
    </div>
</form>

<!-- Additional Styling -->
<style>
    .form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px;
        font-size: 1rem;
    }

    .form-check-input {
        width: 2rem;
        height: 1rem;
    }

    .btn-lg {
        padding: 12px 24px;
        font-size: 1.1rem;
        border-radius: 8px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .mb-3 {
        margin-bottom: 1rem;
    }

    .row {
        margin-bottom: 1.5rem;
    }

    .text-center {
        text-align: center;
    }
</style>
